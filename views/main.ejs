<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #4a148c;
            
            color: #ffffff;
          
        }

        .list-group-item {
            background-color: #3ff1bbbd;
           
            border: 1px solid #4a148c;
          
        }

        .list-group-item:hover {
            background-color: #6d28d9;
           
        }

        .text-light {
            color: #ffffff;
            /* رنگ متن سفید برای کلاس text-light */
        }
    </style>
    <title>amirmahdi task</title>
</head>

<body>
    <div class="container">
        <!-- Header Section -->
        <header class="text-center my-4">
            <h1 class="mb-4">Todo List</h1>
            <!-- SEARCH OPTION IS DISABLE CURRENTLY MAYBE FUTURE  -->
            <!-- <form class="search" action="/search" method="POST">
                <input class="form-control m-auto" type="text" name="search" placeholder="search todos">
            </form> -->
        </header>

        <!-- Display Flash Messages -->
        <div id="messageLabel" class="text-center">
            <% if (message) { %>
                <div class="alert <%= error ? 'alert-danger' : 'alert-success' %>">
                    <%= message %>
                </div>
                <% } %>
        </div>

        <!-- Todo List Section -->
        <ul class="list-group todos mx-auto delete">
            <% if (todos.length===0) { %>
                <li class="list-group-item text-center">No todos available</li>
                <% } else { %>
                    <% todos.forEach(todo=> { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <%=todo.todoname%>
                            </span>
                            <form action="/delete?id=<%=todo.todoname%>" method="POST" class="delete-form">
                                <input type="hidden" name="id" value="<%= todo._id %>">
                                <button type="submit" class="btn btn-link text-light p-0">Delete</button>
                            </form>
                        </li>
                        <% }) %>
                            <% } %>
        </ul>

        <!-- Add Todo Section -->
        <form class="add text-center my-4" action="/add" method="POST">
            <label class="text-light">Add a new todo...</label>
            <input class="form-control m-auto" type="text" name="add">
            <br>
            <div class="text-center">
                <input type="submit" class="btn btn-light" value="Add Todo">
            </div>
        </form>
    </div>
</body>

</html>